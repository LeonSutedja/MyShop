@model Shop.Pages.MyOrder.MyOrderIndexViewModel
@{
    ViewBag.Title = "My Order";
    Layout = "~/Shared/Views/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <h2>My Order</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <label>Processed Orders:</label>
        @Html.Partial("_MultipleOrdersTable", Model.ProcessedOrders)
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <label>Current Orders:</label>
        @if (Model.CurrentOrders.ProductsOrdered.Any())
        {
            <div class="table-responseive">
                <table class="table table-hover table-bordered">
                    <thead>
                    <tr>
                        <th>Item Name:</th>
                        <th>Description:</th>
                        <th>Quantity:</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var orderItem in Model.CurrentOrders.ProductsOrdered)
                    {
                        <tr>
                            <td>@orderItem.ProductOrdered.Name</td>
                            <td>@orderItem.ProductOrdered.Description</td>
                            <td>@orderItem.QtyOrdered</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                No current pending orders.
            </div>
        }
    </div>
</div>